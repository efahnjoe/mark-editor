{
  "name": "mark-editor",
  "version": "0.5.0",
  "description": "A Markdown editor application with Electron, Vue and TypeScript.",
  "author": {
    "name": "efahnjoe"
  },
  "license": "MIT",
  "homepage": "https://github.com/efahnjoe/mark-editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/efahnjoe/mark-editor.git"
  },
  "bugs": {
    "url": "https://github.com/efahnjoe/mark-editor/issues"
  },
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "clean": "rimraf dist out",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "pnpm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:win": "pnpm run build && electron-builder --win --publish never",
    "build:mac": "pnpm run build && electron-builder --mac --publish never",
    "build:linux": "pnpm run build && electron-builder --linux --publish never",
    "build:all": "pnpm run build:win && pnpm run build:linux"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.13.0",
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@element-plus/icons-vue": "^2.3.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@toast-ui/editor": "^3.2.2",
    "@types/klaw": "^3.0.7",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "electron-updater": "^6.3.9",
    "element-plus": "^2.11.1",
    "element-plus-icon": "^0.0.1",
    "fs-extra": "^11.3.1",
    "fs-glob": "^1.1.23",
    "iconv-lite": "^0.7.0",
    "klaw": "^4.1.0",
    "lru-cache": "^11.2.1",
    "pinia": "^3.0.3",
    "postcss": "^8.5.6",
    "semver": "^7.7.2",
    "splitpanes": "^4.0.4",
    "tailwindcss": "^4.1.12",
    "uuid": "^13.0.0",
    "vue-router": "^4.5.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@swc/core": "^1.13.5",
    "@types/node": "^24.6.1",
    "@types/semver": "^7.7.0",
    "@types/splitpanes": "^2.2.6",
    "@vitejs/plugin-vue": "^6.0.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.20",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "unplugin-vue-router": "^0.15.0",
    "vite": "^7.1.11",
    "vue": "^3.5.17",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "better-sqlite3",
      "vue-demi"
    ]
  }
}
