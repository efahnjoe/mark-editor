{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/router.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "src/types/**/*",
    "src/utils/**/*"
  ],
  "compilerOptions": {
    "newLine": "lf",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@components/*": [
        "./src/renderer/src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@shared/types/*": [
        "./src/types/*"
      ],
      "@stores/*": [
        "./src/renderer/src/stores/*"
      ]
    }
  }
}
