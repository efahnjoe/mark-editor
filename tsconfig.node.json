{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/utils/**/*",
    "src/types/**/*"
  ],
  "compilerOptions": {
    "newLine": "lf",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "paths": {
      "@utils/*": [
        "./src/utils/*"
      ],
      "@shared/types/*": [
        "./src/types/*"
      ]
    }
  }
}
